component while06 {

    method main(max: int) -> int {
	local i = 1, cumul = 1;
        while ( check(cumul, i + 1, max) ) {
		i = i + 1;
		cumul = cumul + i;
	}
        return cumul;
    }

    method check(c: int, a: int, m: int) -> bool {
	return a <= m;
    }
}
